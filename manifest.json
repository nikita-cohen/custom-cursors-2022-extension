{
  "name": "Custom Cursors 2022",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./html/PopUp.html"
  },
  "background": {
  "service_worker": "js/background.js"
},

  "permissions": [
  "storage",
  "unlimitedStorage",
    "tabs",
    "activeTab",
    "scripting"
],
  "host_permissions":  [
    "http://*/*", "https://*/*", "*://*/*"
  ],
  "content_scripts": [
  {
    "js": ["js/ContentScript.js"],
    "matches": ["<all_urls>"]
  }
]
}